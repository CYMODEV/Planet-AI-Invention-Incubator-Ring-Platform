// services/api-gateway/src/server.ts
import express from "express";
import cors from "cors";
import morgan from "morgan";
import { createProxyMiddleware } from "http-proxy-middleware";

const app = express();
app.use(cors());
app.use(express.json());
app.use(morgan("dev"));

app.use("/auth", createProxyMiddleware({ target: "http://localhost:3001", changeOrigin: true }));
app.use("/ideation", createProxyMiddleware({ target: "http://localhost:3002", changeOrigin: true }));
app.use("/cipo", createProxyMiddleware({ target: "http://localhost:3003", changeOrigin: true }));
app.use("/oracle", createProxyMiddleware({ target: "http://localhost:3004", changeOrigin: true }));
app.use("/tokens", createProxyMiddleware({ target: "http://localhost:3005", changeOrigin: true }));
app.use("/governance", createProxyMiddleware({ target: "http://localhost:3006", changeOrigin: true }));
app.use("/treasury", createProxyMiddleware({ target: "http://localhost:3007", changeOrigin: true }));
app.use("/collab", createProxyMiddleware({ target: "http://localhost:3008", changeOrigin: true }));
app.use("/exchange", createProxyMiddleware({ target: "http://localhost:3009", changeOrigin: true }));

app.listen(8080, () => console.log("API Gateway on :8080"));
